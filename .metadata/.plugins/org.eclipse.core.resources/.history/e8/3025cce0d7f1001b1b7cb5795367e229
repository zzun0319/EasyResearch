<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>비밀번호 변경</title>

<!-- Core theme CSS (includes Bootstrap)-->
<link href="<c:url value="/css/styles.css" />" rel="stylesheet" />
<script type="text/javascript" src="<c:url value="/js/jquery-3.5.1.js" />"></script>

</head>
<body>
	<c:if test="${confirm != 'OK'}">
		<script>
			alert("잘못된 경로로 접근하셨습니다.");
			location.href="/user/mypage";
		</script>
	</c:if>


	<jsp:include page="../include/header.jsp" />
	
	<form method="post" name="pw_change_form">
		<input type="hidden" name="userId" value="${user.userId}">
		<table>
			<tr>
				<td>새 비밀번호</td>
				<td><input type="password" name="userPw" id="newPw"></td>
			</tr>
			<tr>
				<td>새 비밀번호 확인</td>
				<td><input type="password" id="newPwCheck"></td>
			</tr>
			<tr>
				<td colspan="2">
					<br><br><input type="button" value="비밀번호 변경" id="changePW">
				</td>
			</tr>
		</table>
	</form>
	
	<jsp:include page="../include/footer.jsp" />
</body>
</html>

<script type="text/javascript">

	$(function() {
	
		$("#changePw").click(function() {
			
			const getPwCheck = RegExp(/([a-zA-Z0-9].*[!,@,#,$,%,^,&,*,_,~])|([!,@,#,$,%,^,&,*,_,~].*[a-zA-Z0-9]){8,20}/);
			
			if($("#newPw").val() === "" || $("#newPwCheck").val() === ""){
				alert("입력 칸을 비워두실 수 없습니다.");
				return;
			}
			else if(!getPwCheck.test($("#newPw").val())){
				alert("비밀번호는 8 ~ 20자의 영문대소문자와 특수문자의 조합이 필수입니다.");
				return;
			}
			else if($("#newPw").val() != $("#newPwCheck").val()){
				alert("입력한 두 값이 일치하지 않습니다.");
				return;
			}
			else{
				pw_change_form.submit();
			}
		})
	})

</script>